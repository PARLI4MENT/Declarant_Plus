<Window x:Class="ToDo_Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo_Task"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" ShowGridLines="True" Background="DarkGray">
            <DataGrid x:Name="dataGrid_Main" AutoGenerateColumns="True" Padding="0" Margin="0">
                
            </DataGrid>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Margin="1 1 1 1">
                <Button x:Name="btn_CreateTask" Content="Create task"
                        Height="60" Width="120"/>
                <Button x:Name="btn_EditTask" Content="Edit task"
                        Height="60" Width="120"/>
                <Button x:Name="btn_DeleteTask" Content="Delete task"
                        Height="60" Width="120"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
