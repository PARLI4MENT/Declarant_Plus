<Window x:Class="TestNotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:TestNotify"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        StateChanged="Window_StateChanged" >
    <Grid>
        <tb:TaskbarIcon x:Name="tbIcon" Visibility="Visible" ToolTipText="TOOL_TIP_TEXT" PopupActivation="DoubleClick"
                        TrayLeftMouseDown="TaskbarIcon_TrayLeftMouseDown"/>


        <Button x:Name="btn" Height="40" Width="120" Content="Baloon" Click="btn_Click"/>

    </Grid>
</Window>
